@model IEnumerable<FlowerPower.Models.bestelling>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.besteldatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ophaaldatum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bestelregelid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totaalprijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.klant.voorletters)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.medewerker.voorletters)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status.status1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vestiging.vestigingsnaam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.besteldatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ophaaldatum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bestelregelid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totaalprijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.klant.voorletters)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.medewerker.voorletters)
        </td>
        <td>
            @if (item.status.statusid == 4)
            {
                //Laat hem niet zien want hij is geanulleerd.
            } else if(item.statusid == 2)
            {

            }
            else
            {
                @Html.DisplayFor(modelItem => item.status.status1)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vestiging.vestigingsnaam)
        </td>
        <td>
            @if (User.IsInRole("ApplicatieBeheerder") || User.IsInRole("Manager"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.bestellingid })
                @Html.ActionLink("Delete", "Delete", new { id = item.bestellingid })
            }
            else if (User.IsInRole("Medewerker"))
            {
                <button class="btn btn-primary" onclick="location.href = '@Url.Action("Afgehandeld", new {id = item.bestellingid})';return false;">Zet als Afgehandeld</button>
            }
            else
            {
                <button class="btn btn-primary" onclick="location.href = '@Url.Action("Delete", new {id = item.bestellingid})';return false;">Annuleer uw bestelling</button>
            }
        </td>
    </tr>
}

</table>
