<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navBar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="navBarUl">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Bestellen","Index","Product")</li>
                    @if (User.IsInRole("Manager"))
                    {
                        <li>@Html.ActionLink("Registreer een medewerker", "RegisterMedewerker", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                        <li>@Html.ActionLink("Artikelen ", "Index", "artikels")</li>
                        <li>@Html.ActionLink("Rollen ", "Index", "Roles")</li>
                        <li>@Html.ActionLink("Vestegingen ", "Index", "vestigings")</li>
                        <li>@Html.ActionLink("Bestellingen ", "Index", "bestelling")</li>
                        <li>@Html.ActionLink("Filliaal Wijzigen", "Index", "AssignFil")</li>
                        <li>@Html.ActionLink("Activiteit", "Index", "Activity")</li>

                    }
                    else if (User.IsInRole("Applicatiebeheerder"))
                    {
                        <li>@Html.ActionLink("Registreer een medewerker", "RegisterMedewerker", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                        <li>@Html.ActionLink("Artikelen ", "Index", "artikels")</li>
                        <li>@Html.ActionLink("Rollen ", "Index", "Roles")</li>
                        <li>@Html.ActionLink("Vestegingen ", "Index", "vestigings")</li>
                        <li>@Html.ActionLink("Bestellingen ", "Index", "bestelling")</li>
                        <li>@Html.ActionLink("Filliaal wijzigen", "Index", "AssignFil")</li>
                        <li>@Html.ActionLink("Activiteit", "Index", "Activity")</li>

                    }
                    else if (User.IsInRole("Medewerker"))
                    {
                        <li>@Html.ActionLink("Bestellingen ", "Index", "bestelling")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Store", "Index", "Product")</li>
                        <li>@Html.ActionLink("Mijn Bestellingen", "Index", "bestelling")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-top: 75px">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
