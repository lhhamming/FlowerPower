@model IEnumerable<FlowerPower.Models.artikel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.artikelnaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actief)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.artikelnaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.actief)
        </td>
        <td>
            <img src="@Url.Content("~/images/artikels/"+item.image)" alt="Image" width="100" height="100" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.artikelid }) |
            @Html.ActionLink("Details", "Details", new { id=item.artikelid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.artikelid })
        </td>
    </tr>
}

</table>
