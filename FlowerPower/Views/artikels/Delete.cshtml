@model FlowerPower.Models.artikel

@{
    ViewBag.Title = "Delete";
}

<h2>Artikel verwijderen</h2>

<h4>Weet je zeker dat je dit artikel wilt verwijderen?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Artikelnaam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.artikelnaam)
        </dd>

        <dt>
            Prijs per stuk
        </dt>

        <dd>
            €@Html.DisplayFor(model => model.prijs)
        </dd>

        <dt>
            Actief?
        </dt>

        <dd>
            @Html.DisplayFor(model => model.actief)
        </dd>

        <dt>
            Afbeelding
        </dt>

        <dd>
            @Html.DisplayFor(model => model.image)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijder" class="btn btn-default" /> |
            @Html.ActionLink("Terug naar overzicht", "Index")
        </div>
    }
</div>
