
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FlowerPower.Models;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cart</title>
</head>
<body>

    <h3>Cart Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (item item in (List<item>)Session["cart"])
            {
        <tr>
            <td><a href="@Url.Action("Remove", "Cart", new { id = item.Product.artikelid })">Remove</a></td>
            <td>@item.Product.artikelid</td>
            <td>@item.Product.artikelnaam</td>
            @if (item.Product.image == null)
            {
                <td><img src="~/images/artikels/imgnotfound.png" alt="ImageNotFound" width="100" height="100" /></td>
            }
            else
            {
                <td><img src="@Url.Content("~/images/artikels/"+item.Product.image)" alt="Image" width="100" height="100" /></td>
            }
            <td>@item.Product.prijs</td>
            <td>@item.Quantity</td>
            <td>@(item.Product.prijs * item.Quantity)</td>
        </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @{
                    List<item> cart = (List<item>)Session["cart"];
                    var total = cart.Sum(item => item.Product.prijs * item.Quantity);
                }
                @total
            </td>
        </tr>
    </table>
    <br>
    <a>@Html.ActionLink("Order", "Order")</a>
    <a href="@Url.Action("Index", "Product")">Continue Shopping</a>

</body>
</html>