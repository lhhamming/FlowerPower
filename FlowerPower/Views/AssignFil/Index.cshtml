@model IEnumerable<FlowerPower.Models.medewerker>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.voorletters)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tussenvoegsels)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.achternaam)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.vestiging.vestigingsnaam)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.voorletters)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tussenvoegsels)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.achternaam)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.vestiging.vestigingsnaam)
                        </td>
                        <td>
                            @Html.ActionLink("Vestiging Wijzigen", "Edit", new { id = item.medewerkerid })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</body>
</html>
