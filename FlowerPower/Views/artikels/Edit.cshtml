@model FlowerPower.Models.artikel

@{
    ViewBag.Title = "Edit";
}

<h2>Artikel aanpassen</h2>

@using (Html.BeginForm("Edit", "artikels", FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.artikelid)

    <div class="form-group">
        <label class="control-label col-md-2">Artikelnaam</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.artikelnaam, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.artikelnaam, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Prijs per stuk</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.prijs, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.prijs, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Actief</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.actief)
                @Html.ValidationMessageFor(model => model.actief, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <label for="file">Upload Image:</label>
    <input type="file" name="file" id="file" style="width: 100%;" />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Opslaan" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Terug naar overzicht", "Index")
</div>
