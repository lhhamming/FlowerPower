@model FlowerPower.Models.RegisterMedewerkerViewModel
@{
    ViewBag.Title = "RegisterANewMedewerker";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("RegisterMedewerker", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account for a medewerker.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.TussenVoegsel, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TussenVoegsel, new { @class = "form-control" })
        </div>
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.VestID, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.VestID, new { @class = "form-control" })
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}